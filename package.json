{
  "name": "responsive-gsap",
  "version": "0.0.1",
  "description": "A React hook that extends useGSAP with responsive media queries, resize observation, and load-controlled playback.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run clean && tsup",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "typescript",
    "use-gsap",
    "react-hook",
    "javascript",
    "responsive-gsap"
  ],
  "author": {
    "name": "phucbm",
    "url": "https://github.com/phucbm"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/phucbm/responsive-gsap"
  },
  "bugs": {
    "url": "https://github.com/phucbm/responsive-gsap/issues"
  },
  "homepage": "https://github.com/phucbm/responsive-gsap",
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "gsap": "^3.13.0",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@phucbm/banner": "^0.0.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "happy-dom": "^15.11.7",
    "jsdom": "^25.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false
}